<section class="depot_form">
  <% if flash[:alert] %>
    <aside class="notice"><%= flash[:alert] %></aside>
  <% end %>
  <%= form_tag do %>
    <h2>Log In</h2>
    <div class="field">
    <%= label_tag :name, 'Name:' %>
    <%= text_field_tag :name, params[:name], class: "form-control" %>
    </div>
    <div class="field">
    <%= label_tag :password, 'Password:' %>
    <%= password_field_tag :password, params[:password], class: "form-control" %>
    </div>
    <div class="actions mt-3">
      <div class="row">
        <div class="col">
          <%= link_to 'Cancel', accounts_path, class: "btn btn-primary form-control btn-block" %> 
        </div>
        <div class="col">
          <%= submit_tag "Login", class: "btn btn-primary form-control btn-block" %>
        </div>
      </div>
    </div>
  <% end %>
</section>